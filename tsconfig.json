{
    "compilerOptions": {
      "declaration": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "importHelpers": false,
      "jsx": "react",
      "module": "commonjs",
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "outDir": "dist/",
      "removeComments": false,
      "sourceMap": true,
      "strict": true,
      "strictNullChecks": true,
      "strictPropertyInitialization": false,
      "target": "es5",
      "lib": [
        "es6",
        "dom"
      ],
      // "typeRoots" : ["./typings", "./node_modules/@types"],
      "baseUrl": ".",
      "paths": {
        "@storybook/addons": [
          "typings/storybook__addons"
        ]
      }
    },
    "files": [
      "src/index.tsx",
      "src/register.tsx"
    ],
  }
